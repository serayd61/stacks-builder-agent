{
  "name": "stacks-builder-agent",
  "version": "1.0.0",
  "description": "Automated Stacks Builder Challenge Agent - GitHub commits and onchain activity automation",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "github-bot": "npx tsx scripts/github-bot.ts",
    "onchain-bot": "npx tsx scripts/onchain-bot.ts",
    "progress": "npx tsx scripts/progress-tracker.ts",
    "daily": "npm run github-bot && npm run onchain-bot && npm run progress",
    "test": "vitest",
    "lint": "eslint src scripts --ext .ts"
  },
  "keywords": [
    "stacks",
    "bitcoin",
    "defi",
    "automation",
    "clarity",
    "builder-challenge"
  ],
  "author": "serayd61",
  "license": "MIT",
  "dependencies": {
    "@stacks/blockchain-api-client": "^8.0.0",
    "@stacks/network": "^7.0.0",
    "@stacks/transactions": "^7.0.0",
    "@stacks/stacking": "^7.0.0",
    "@stacks/encryption": "^7.0.0",
    "simple-git": "^3.22.0",
    "node-fetch": "^3.3.2",
    "dotenv": "^16.3.1"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "typescript": "^5.3.3",
    "tsx": "^4.7.0",
    "vitest": "^1.2.0",
    "eslint": "^8.56.0",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
